{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for Drush site aliases",
    "type": "object",
    "additionalProperties": {
        "type": "object",
        "properties": {
            "root": {"type": "string"},
            "host": {"type": "string"},
            "uri": {"type": "string"},
            "user": {"type": "string"},
            "os": {"type": "string"},
            "paths": {
                "type": "array",
                "items": {"type": "object"}
            },
            "command": {
               "type": "object",
                "additionalProperties": {"type": "object"}
            },
            "docker": {
                "type": "object",
                "properties": {
                    "service": {"type":  "string"},
                    "exec": {
                        "type": "object",
                        "options": {"type":  "string"}
                    }
                }
            }
        }
    }
}
