{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Drupal permissions file",
    "type": "object",
    "properties": {
        "permission_callbacks": {
            "type": "array",
            "items": {"type": "string"}
        }
    },
    "additionalProperties": {
        "type": "object",
        "required": ["title"],
        "additionalProperties": false,
        "propertyNames": {
            "type": "string",
            "pattern": "^[^A-Z]+$"
        },
        "properties": {
            "title": {"type": "string"},
            "description": {"type": "string"},
            "restrict access": {"type": "boolean"}
        }
    }
}
